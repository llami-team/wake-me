{
  "name": "wake-me",
  "version": "1.0.3",
  "description": "A simple React component library",
  "main": "dist/wake-me.js",
  "module": "dist/wake-me.mjs",
  "types": "dist/wake-me.d.ts",
  "files": [
    "dist",
    "public"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "VITE_CJS_IGNORE_WARNING=true vite",
    "release": "release-it"
  },
  "keywords": [
    "react",
    "component",
    "library"
  ],
  "author": "llami-team",
  "license": "MIT",
  "peerDependencies": {
    "react": ">=16.8.0",
    "react-dom": ">=16.8.0"
  },
  "devDependencies": {
    "@release-it/conventional-changelog": "^10.0.0",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@vitejs/plugin-react": "^4.3.4",
    "autoprefixer": "^10.4.20",
    "postcss": "^8.5.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "release-it": "^17.0.3",
    "tailwindcss": "^3.4.17",
    "tsup": "^8.0.1",
    "typescript": "^5.3.3",
    "vite": "^6.0.11"
  },
  "release-it": {
    "hooks": {
      "beforeStart": "npm run build"
    },
    "git": {
      "commitMessage": "chore: release v${version}",
      "tagName": "v${version}"
    },
    "npm": {
      "publish": true
    },
    "github": {
      "release": true
    },
    "plugins": {
      "@release-it/conventional-changelog": {
        "preset": "angular",
        "infile": "CHANGELOG.md"
      }
    }
  }
}
